{
  "name": "cbl-reactnative",
  "version": "0.2.1",
  "description": "Couchbase Lite Enterprise for React Native",
  "author": "Dev Experience/Ecosystem Team @ Couchbase",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Couchbase-Ecosystem/cbl-reactnative/issues"
  },
  "homepage": "https://cbl-reactnative.dev/",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react-native",
    "couchbase",
    "couchbase mobile",
    "couchbase lite",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Couchbase-Ecosystem/cbl-reactnative.git"
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build expo-example/android/build expo-example/android/app/build expo-example/ios/build lib",
    "build": "bob build",
    "release": "release-it"
  },
  "main": "./lib/commonjs/index.js",
  "source": "./src/index.tsx",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "import": "./lib/module/index.js",
      "require": "./lib/commonjs/index.js"
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*",
    "!src/cblite-js/cblite-tests"
  ],
  "dependencies": {
    "react-native-uuid": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.8.1",
    "@evilmartians/lefthook": "^1.8.4",
    "@react-native/eslint-config": "^0.76.2",
    "@release-it/conventional-changelog": "^9.0.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-native-get-random-values": "^1.8.2",
    "@types/uuid": "^10.0.0",
    "commitlint": "^17.8.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fast-xml-parser": "~4.4.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "react": "18.3.1",
    "react-native": "0.76.2",
    "react-native-builder-bob": "^0.32.1",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.2.0"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "react/no-unstable-nested-components": "off",
      "react-native/no-inline-styles": "off",
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "type": "module-legacy",
    "languages": "kotlin-swift",
    "version": "0.38.1"
  }
}
